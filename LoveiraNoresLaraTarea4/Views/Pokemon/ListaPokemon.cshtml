@model IEnumerable<LoveiraNoresLaraTarea4.Models.Pokemon>

@{
    ViewData["Title"] = "Lista Pokemon -";
}

<h1><b>Lista Pokemon</b></h1>

<!-- Contenedor para centrar la tabla -->
<div style="display: flex; justify-content: center; margin-top: 20px;">
    <!-- Lista de Pokémon -->
    <table style="border-collapse: collapse; width: auto; text-align: center;">
        <thead>
            <tr>
                <th style="padding: 10px; border: 2px solid #ddd;">Nombre</th>
                <th style="padding: 10px; border: 2px solid #ddd;">Peso</th>
                <th style="padding: 10px; border: 2px solid #ddd;">Altura</th>
                <th style="padding: 10px; border: 2px solid #ddd;">Tipo</th>
                <th style="padding: 10px; border: 2px solid #ddd;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pokemon in Model)
            {
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;">@pokemon.nombre</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">@pokemon.peso</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">@pokemon.altura</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @foreach (var tipo in pokemon.PokemonTipo.Select(pt => pt.Tipo))
                        {
                            @tipo.nombre
                        }
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        <a href="@Url.Action("Detalles", "Pokemon", new { id = pokemon.PokemonId })" class="btn btn-primary">Detalles</a>
                        <a href="@Url.Action("AñadirAEquipo", "Pokemon", new { id = pokemon.PokemonId })" class="btn btn-primary">Añadir al Equipo</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

